{
  "manifest_version": 2,
  "name": "Unbias Me",
  "version": "0.0.0.3",
  "description": "Displays GitHub, LinkedIn and Twitter profiles with minimal attribution information.",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Unbias Me"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.github.com/*",
        "https://*.github.com/*"
      ],
      "css": ["github.css"],
      "js": ["github.js"]
    },
    {
      "matches": [
        "http://*.linkedin.com/*",
        "https://*.linkedin.com/*"
      ],
      "js": ["linkedin.js"]
    },
    {
      "matches": [
        "http://*.twitter.com/*",
        "https://*.twitter.com/*"
      ],
      "js": ["twitter.js"]
    }
  ]
}
